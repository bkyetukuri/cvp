{
  "name": "cvp",
  "version": "1.0.0",
  "description": "Cintas Vendor Portal project.",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.5",
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "cors": "^2.8.5",
    "express": "^4",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "auth": {
        "[production]": {
          "kind": "xsuaa",
          "strategy": "JWT",
          "credentials": {
            "xsappname": "cvp"
          }
        },
        "[development]": {
          "strategy": "mocked",
          "users": {
            "Kiran": {
              "roles": [
                "Viewer",
                "Editor"
              ]
            },
            "Vidhya": {
              "roles": [
                "Viewer",
                "Editor"
              ]
            }
          }
        }
      }
    },
    "hana": {
      "sql_mapping": "plain"
    },
    "sqlite": {
      "sql_mapping": "plain"
    },
    "sql": {
      "names": "plain",
      "native_hana_associations": false
    }
  }
}
